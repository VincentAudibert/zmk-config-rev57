        numrow_9 {
            bindings = <&mt F10 N9>;
            key-positions = <21 34>;
            layers = <0>;
        };

        numrow_0 {
            bindings = <&mt F11 N0>;
            key-positions = <22 35>;
            layers = <0>;
        };

        numrow_degree {
            bindings = <&mt F12 MINUS>;
            key-positions = <23 36>;
            layers = <0>;
        };

        arrow_left {
            bindings = <&kp LEFT_ARROW>;
            key-positions = <32 44>;
            layers = <0>;
        };

        arrow_down {
            bindings = <&kp DOWN_ARROW>;
            key-positions = <33 45>;
            layers = <0>;
        };

        arrow_up {
            bindings = <&kp UP_ARROW>;
            key-positions = <34 46>;
            layers = <0>;
        };

        arrow_right {
            bindings = <&kp RIGHT_ARROW>;
            key-positions = <35 47>;
            layers = <0>;
