        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <29 28>;
            layers = <0>;
        };

        caps_lock {
            bindings = <&kp CAPSLOCK>;
            key-positions = <37 38>;
            layers = <0>;
